Name:           @PACKAGE@
Version:        @VERSION@
Release:        @RELEASE@
Summary:        Flumotion Flash Streaming support.

Group:          Applications/Internet
License:	Proprietary
URL:            http://www.fluendo.com/
Source:         %{name}-%{version}.tar.bz2
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root

Requires:	flumotion >= 0.4.0
Requires:       gstreamer-fluendo-flvmux
Requires:       gstreamer-fluendo-vp6enc
Requires:       gstreamer-fluendo-mcaacenc

BuildRequires:	gettext
BuildRequires:	python >= 2.3
BuildRequires:	python-twisted
BuildRequires:	flumotion >= 0.4.0
BuildRequires:	epydoc
BuildRequires:  pkgconfig

%description
Flumotion Flash Streaming support.

%prep
%setup -q

%build
%configure

make

%install
rm -rf $RPM_BUILD_ROOT

%makeinstall

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%doc ChangeLog COPYING README AUTHORS LICENSE.Flumotion
%{_libdir}/flumotion

