Name:           @PACKAGE@
Version:        @VERSION@
Release:        @PACKAGE_VERSION_RELEASE@
Summary:        Flumotion Flash Streaming support.

Group:          Applications/Internet
License:	Proprietary
URL:            http://www.fluendo.com/
Source:         %{name}-%{version}.tar.bz2
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root

Requires:	flumotion >= @FLU_REQ@
Requires:       gstreamer-fluendo-flvmux >= 0.10.5
Requires:       gstreamer-fluendo-vp6enc >= 0.10.2
Requires:       gstreamer-fluendo-mcaacenc >= 0.10.5

BuildRequires:	gettext
BuildRequires:	python >= 2.3
BuildRequires:	flumotion >= @FLU_REQ@
BuildRequires:	epydoc
BuildRequires:  pkgconfig

%description
Flumotion Flash Streaming support.

%prep
%setup -q

%build
%configure

make

%install
rm -rf $RPM_BUILD_ROOT

%makeinstall

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%doc ChangeLog COPYING README AUTHORS LICENSE.Flumotion
%{_libdir}/flumotion

